<% if @view_in_config && @erb_code %>
  <%= render inline: @erb_code %>
  
  <% else %>
  <div class="container">
  <div class="page-header clearfix">
    <div class="pull-left">
    <h2><%=@title%></h2>
    </div>
  </div>
<%= simple_form_for @bom, html: { class: 'form-horizontal col-sm-' + BUTTONS_CLS['form-span#'] },
    wrapper: :horizontal_form,
    wrapper_mappings: {
    check_boxes: :horizontal_radio_and_checkboxes,
    radio_buttons: :horizontal_radio_and_checkboxes,
    file: :horizontal_file_input,
    boolean: :horizontal_boolean
  } do |f| %>
  
  <div class="form-inputs"> 

  <%= f.input :project_name, :label => t('Project Name'), :readonly => true, :input_html => {:value => @project.name} %>
  <%= f.input :part_name_autocomplete, :label => t('Base Part#'), :input_html => { data: {autocomplete_source: SUBURI + base_materialx.autocomplete_parts_path}},:placeholder => t("Enter Part Name Keyword"), :required => true  %>
  <%= f.input :part_id, :as => :hidden %> 
  <%= f.input :part_num, :label => t('Part#'), :readonly => true %>
  <%= f.input :spec, :label => t('Spec'), :readonly => true %>
  <%= f.input :unit, :label => t('Qty Unit'), :readonly => true %>
  <%= f.input :qty, :label => t('Qty'), :readonly => readonly?(@bom, 'qty') %>
  <%= f.input :unit_price_reference, :label => t('Unit Price($)'), :readonly => readonly?(@bom, 'unit_price_reference') %>
  <%= f.input :total_reference, :label => t('Total($)'), :readonly => readonly?(@bom, 'total_reference') %>
  <%= f.input :about_cost, :label => t('About Cost'), :input_html => {:rows => 2}, :readonly => readonly?(@bom, 'about_cost') %>
  <%= f.input :preferred_mfr, :label => t('Preferred Mfr'), :input_html => {:rows => 2}, :readonly => readonly?(@bom, 'preferred_mfr') %>
  <%= f.input :preferred_supplier, :label => t('Preferred Supplier'), :input_html => {:rows => 2}, :readonly => readonly?(@bom, 'preferred_supplier') %>
  <%= f.input :brief_note, :label => t('Brief Note'), :readonly => readonly?(@bom, 'brief_note'), :input_html => {:rows => 2} %>
    
  <div class="form-actions col-sm-offset-<%=BUTTONS_CLS['offset#']%>" >
              <%= link_to t('Back'), SUBURI + "/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
              <%= f.button :submit, t('Save'), :class => BUTTONS_CLS['action'] %>
         </div> 
  
    </div>
 
<% end %>

</div>

<% end %>
